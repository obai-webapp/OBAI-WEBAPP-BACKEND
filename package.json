        "axios": "^1.6.3",
        "bcrypt": "^5.1.1",
        "celebrate": "^15.0.3",
        "cors": "^2.8.5",
        "date-fns": "^3.0.6",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-compression": "^1.0.2",
        "express-end": "0.0.8",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^7.1.5",
        "express-winston": "^4.2.0",
        "helmet": "^7.1.0",
        "husky": "^8.0.3",
        "jsonwebtoken": "^9.0.2",
